{
  "manifest_version": 3,
  "name": "Lucidity",
  "version": "0.1",
  "description": "Lucidity encourages sustainable shopping by flagging fast fashion items and suggesting secondhand alternatives.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.com/*"
  ],
  "action": {
    "default_title": "Lucidity",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*"
      ],
      "matches": [
        "*://*.amazon.com/*"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}