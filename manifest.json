{
  "manifest_version": 3,
  "name": "Lucidity",
  "version": "1.0",
  "description": "Lucidity helps you stay focused by monitoring your study sessions and providing feedback.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Lucidity"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}